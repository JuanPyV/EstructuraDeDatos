public class recursividad {

	public static void main(String[] args) {
		System.out.println(Sumatorio(15));

	}
	
	private static int Sumatorio(int iNumero){
		  if (iNumero==0)
		    return 0;
		  else
		    return iNumero + Sumatorio(iNumero-1);
		}

}
